

namespace GuppyGUI
{
  public struct Point2i
  {
    public int X;
    public int Y;

    public static readonly Point2i Empty = new Point2i(0, 0);
    public static readonly Point2i Natural = new Point2i(-1, -1);

    public Point2i(int x, int y)
    {
      this.X = x;
      this.Y = y;
    }

    public override string ToString()
    {
      return X.ToString() + "," + Y.ToString();
    }
  }
}
